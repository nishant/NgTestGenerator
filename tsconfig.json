{
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "declaration": false,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "es2016", "es2015", "dom"]
  },
  "include": ["**/*","src/**/*", "test/**/*", "**/*/.eslintrc.js", "jest.config.js"],
  "exclude": ["**/*.js", "sample-web-app"]
}
